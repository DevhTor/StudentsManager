@using StudentsManager.UI.Models
@using System.Text.Encodings.Web
@model List<Student>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-light">Lista De Estudiantes</h2>
        <!-- Botón para agregar un nuevo estudiante -->
        <a asp-controller="Students" asp-action="Add" class="btn btn-primary">
            Agregar
        </a>
    </div>

    <!-- Contenedor para el mensaje de estado -->
    <div id="statusMessage" class="alert d-none" role="alert"></div>

    <table class="table table-striped table-bordered table-dark">
        <thead>
            <tr>
                <th scope="col" class="text-primary">Id</th>
                <th scope="col" class="text-primary">Matricula</th>
                <th scope="col" class="text-primary">Nombre</th>
                <th scope="col" class="text-primary">Fecha de Nacimiento</th>
                <th scope="col" class="text-primary">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var student in Model)
                {
                    <tr>
                        <th scope="row">@student.Id</th>
                        <td>@student.StudentNumber</td>
                        <td>@student.Name</td>
                        <td>@student.DateOfBirth.ToShortDateString()</td>
                        <td>
                            <!-- Contenedor flexbox para alinear los botones horizontalmente -->
                            <div class="d-flex align-items-center">
                                <!-- Enlace para ver los detalles del estudiante -->
                                <a asp-controller="Students" asp-action="Details" asp-route-id="@student.Id" class="btn btn-info btn-sm me-2">Detalles</a>
                                <!-- Enlace para editar el estudiante -->
                                <a asp-controller="Students" asp-action="Edit" asp-route-id="@student.Id" class="btn btn-warning btn-sm me-2">Editar</a>
                                <!-- Botón para eliminar, abre un modal de confirmación -->
                                <a href="#" class="btn btn-danger btn-sm delete-btn"
                                   data-id="@student.Id"
                                   data-name="@student.Name"
                                   data-bs-toggle="modal"
                                   data-bs-target="#confirmDeleteModal">Eliminar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">No hay estudiantes disponibles.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Modal de confirmación de eliminación -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content bg-dark text-light">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmDeleteModalLabel">Confirmar Eliminación</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                ¿Estás seguro de que deseas eliminar al estudiante "<span id="studentNameSpan"></span>"?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <form asp-controller="Students" asp-action="Delete" method="post" id="deleteForm">
                    <input type="hidden" name="id" id="studentIdInput" />
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
</div>

@if (TempData["StatusMessage"] != null)
{
    var message = TempData["StatusMessage"].ToString();
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var messageElement = document.getElementById('statusMessage');
            var message = '@Html.Raw(JavaScriptEncoder.Default.Encode(message))';
            if (message) {
                messageElement.textContent = message;
                messageElement.classList.remove('d-none');
                messageElement.classList.add('alert-success');
                // Oculta el mensaje después de 5 segundos
                setTimeout(function () {
                    messageElement.classList.add('d-none');
                }, 5000);
            }
        });
    </script>
}

<script src="~/js/Student.js"></script>
