@using StudentsManager.UI.Models
@model Student

<div class="container mt-5">
    <h2 class="text-light">Editar Estudiante</h2>
    <hr class="text-white" />
    <div class="row">
        <div class="col-md-6">
            <form asp-controller="Students" asp-action="Edit" method="post">
                <!-- Campo oculto para el Id del estudiante -->
                <input type="hidden" asp-for="Id" />
                <div class="mb-3">
                    <label for="studentNumber" class="form-label text-light">Matrícula</label>
                    <input type="text" class="form-control" id="studentNumber" asp-for="StudentNumber" required>
                    <span asp-validation-for="StudentNumber" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="name" class="form-label text-light">Nombre</label>
                    <input type="text" class="form-control" id="name" asp-for="Name" required>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="dateOfBirth" class="form-label text-light">Fecha de Nacimiento</label>
                    <input type="date" class="form-control" id="dateOfBirth" asp-for="DateOfBirth" required>
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                <a asp-controller="Students" asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </form>
        </div>
    </div>
</div>
