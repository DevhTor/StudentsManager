@using StudentsManager.UI.Models
@using System.Text.Encodings.Web
@model List<Homework>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-light">Lista De Tareas</h2>
        <!-- Nuevo botón para agregar una nueva tarea -->
        <a asp-controller="Homeworks" asp-action="Add" class="btn btn-primary">
            Agregar Tarea
        </a>
    </div>
    <table class="table table-striped table-bordered table-dark">
        <thead>
            <tr>
                <th scope="col" class="text-primary">Id</th>
                <th scope="col" class="text-primary">StudentId</th>
                <th scope="col" class="text-primary">Descripcion</th>
                <th scope="col" class="text-primary">Calificacion</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var student in Model)
                {
                    <tr>
                        <th scope="row">@student.Id</th>
                        <td>@student.StudentId</td>
                        <td>@student.Description</td>
                        <td>@student.Score</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@if (TempData["StatusMessage"] != null)
{
    var message = TempData["StatusMessage"].ToString();
    <script>
        alert('@Html.Raw(JavaScriptEncoder.Default.Encode(message))');
    </script>
}
