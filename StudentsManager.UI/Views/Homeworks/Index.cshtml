@using StudentsManager.UI.Models
@using System.Text.Encodings.Web
@model List<Homework>

@{
    var students = ViewBag.Students as List<Student>;
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-light">Lista De Tareas</h2>
        <!-- Botón para agregar una nueva tarea -->
        <a asp-controller="Homeworks" asp-action="Add" class="btn btn-primary">
            Agregar Tarea
        </a>
    </div>

    <!-- Contenedor para el mensaje de estado -->
    <div id="statusMessage" class="alert d-none" role="alert"></div>

    <table class="table table-striped table-bordered table-dark">
        <thead>
            <tr>
                <th scope="col" class="text-primary">Id</th>
                <th scope="col" class="text-primary">Estudiante</th> <!-- Se cambió a "Estudiante" -->
                <th scope="col" class="text-primary">Descripcion</th>
                <th scope="col" class="text-primary">Calificacion</th>
                <th scope="col" class="text-primary">Acciones</th> <!-- Nueva columna para acciones -->
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                @foreach (var homework in Model)
                {
                    // Busca el estudiante por ID
                    var student = students?.FirstOrDefault(s => s.Id == homework.StudentId);
                    var studentName = student?.Name ?? "Estudiante no encontrado";
                    <tr>
                        <th scope="row">@homework.Id</th>
                        <td>@studentName</td> <!-- Se muestra el nombre del estudiante -->
                        <td>@homework.Description</td>
                        <td>@homework.Score</td>
                        <td>
                            <!-- Botón para ver detalles, enlaza con la acción 'Detail' -->
                            <a asp-controller="Homeworks" asp-action="Detail" asp-route-id="@homework.Id" class="btn btn-sm btn-info">Detalles</a>
                            <!-- Botón para editar, enlaza con la acción 'Edit' y pasa el Id del estudiante -->
                            <a asp-controller="Homeworks" asp-action="Edit" asp-route-id="@homework.Id" class="btn btn-sm btn-warning">Editar</a>
                            <!-- Botón para eliminar, abre un modal de confirmación -->
                            <a href="#" class="btn btn-sm btn-danger delete-btn"
                               data-id="@homework.Id"
                               data-description="@homework.Description"
                               data-bs-toggle="modal"
                               data-bs-target="#confirmDeleteModal">Eliminar</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<!-- Modal de confirmación de eliminación -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content bg-dark text-light">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmDeleteModalLabel">Confirmar Eliminación</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                ¿Estás seguro de que deseas eliminar la tarea "<span id="homeworkDescriptionSpan"></span>"?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <form asp-controller="Homeworks" asp-action="Delete" method="post" id="deleteForm">
                    <input type="hidden" name="id" id="homeworkIdInput" />
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
</div>

@if (TempData["StatusMessage"] != null)
{
    var message = TempData["StatusMessage"].ToString();
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var messageElement = document.getElementById('statusMessage');
            var message = '@Html.Raw(JavaScriptEncoder.Default.Encode(message))';
            if (message) {
                messageElement.textContent = message;
                messageElement.classList.remove('d-none');
                messageElement.classList.add('alert-success');
                // Oculta el mensaje después de 5 segundos
                setTimeout(function () {
                    messageElement.classList.add('d-none');
                }, 5000);
            }
        });
    </script>
}

<script src="~/js/Homework.js"></script>

