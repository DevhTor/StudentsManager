@using StudentsManager.UI.Models
@model Homework

<div class="container mt-5">
    <h2 class="text-light">Detalles de la Tarea</h2>
    <hr class="text-white" />
    <div class="card bg-dark text-light p-4">
        <div class="mb-3">
            <label class="form-label fw-bold">ID:</label>
            <p class="form-control-static">@Model.Id</p>
        </div>
        <div class="mb-3">
            <label class="form-label fw-bold">Estudiante:</label>
            <p class="form-control-static">@ViewBag.StudentName</p>
        </div>
        <div class="mb-3">
            <label class="form-label fw-bold">Descripción:</label>
            <p class="form-control-static">@Model.Description</p>
        </div>
        <div class="mb-3">
            <label class="form-label fw-bold">Calificación:</label>
            <p class="form-control-static">@Model.Score</p>
        </div>
        <div>
            <a asp-controller="Homeworks" asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
            <a asp-controller="Homeworks" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
        </div>
    </div>
</div>
